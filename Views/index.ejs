<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vision Vault - Showcase. Collaborate. Innovate.</title>

    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <!-- Header -->
    <header>
        <div class="container header-container">
            <a href="#" class="logo">Vision <span>Vault</span></a>
            <nav>
                <ul>
                    <li><a href="/home">Home</a></li>
                    <li><a href="#">Explore</a></li>
                    <li><a href="/upload">Upload</a></li>
                    <li><a href="#">Top</a></li>
                    <li><a href="#">Community</a></li>
                </ul>
            </nav>
            <% if (user) { %>
                <a href="/logout" class="btn btn-primary">Logout</a>
              <% } else { %>
                <a href="/login" class="btn btn-primary">Login</a>
                <a href="/signup" class="btn btn-primary">Sign Up</a>
            <% } %>
            <button class="hamburger">☰</button>
        </div>
    </header>

    <!-- Hero Section -->
    <section class="hero">
        <div class="container" style="display: flex;">
            <div class="hero-content">
                <h1>Showcase. Collaborate. Innovate.</h1>
                <p>Make your projects visible to the community, gather valuable feedback and insights, and get recommendations helping to suggest mentor, newest projects etc.</p>
                <div class="hero-buttons">
                    <a href="#" class="btn btn-primary">Explore</a>
                    <% if (!user) { %>
                        <a href="/login" class="btn btn-primary">Upload</a>
                      <% } else { %>
                        <a href="/upload" class="btn btn-outline">Upload</a>
                    <% } %>
                    
                </div>
                <div style="margin-top: 20px; font-size: 0.8rem; color: #777;">
                    <p>Customise for creators</p>
                </div>
            </div>
            <div class="hero-image">
                <img src="/images/image1.jpg" alt="Hero Image">
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="features">
        <div class="container">
            <h2>Sort the projects, align them, manage your students.</h2>
            <div class="features-grid">
                <div class="feature-card">
                    <div class="feature-image">
                        <img src="/images/aiml.jpg" alt="AI/ML">
                    </div>
                    <div class="feature-content">
                        <h3>AI/ML</h3>
                        <p>AI/ML projects to enhance data learning capabilities. Data processing and representation to create valuable products across industries, finance, and technology.</p>
                    </div>
                </div>
                <div class="feature-card">
                    <div class="feature-image">
                        <img src="/images/fullstack.jpg" alt="Full Stack">
                    </div>
                    <div class="feature-content">
                        <h3>Full-Stack</h3>
                        <p>Full stack projects integrate frontend, backend, and database technologies. Develop creative solutions to real-world problems.</p>
                    </div>
                </div>
                <div class="feature-card">
                    <div class="feature-image">
                        <img src="/images/cloud.jpg" alt="Cloud">
                    </div>
                    <div class="feature-content">
                        <h3>Cloud</h3>
                        <p>Stream hosting that encompasses CDN, API endpoint development from back-end and create elastic resources.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- AI Section -->
    <section class="ai-section">
        <div class="container">
            <div class="ai-content">
                <h2>Manage your interactions with AI</h2>
                <p>Sort, align easily with our AI feature</p>
                <div style="margin-top: 15px;">
                    <a href="#" class="btn btn-outline">Explore</a>
                </div>
            </div>

            <div class="ai-features">
                <div class="ai-card">
                    <div class="ai-header">
                        <div style="color: #3498db;">● Queue 1</div>
                        <div style="background: #333; padding: 2px 6px; border-radius: 4px; font-size: 0.8rem;">AI</div>
                    </div>
                    <img src="/images/decorate4.jpg" alt="AI Image 1">
                    <div style="color: #888; font-size: 0.8rem;">updated 15 mins</div>
                    <div style="margin-top: 50px; font-size: 0.9rem;">Auto update</div>
                    <div style="color: #888; font-size: 0.8rem;">Get the optimal results on your interactions with AI.</div>
                </div>
                <div class="ai-card">
                    <div class="ai-header">
                        <div style="color: #f39c12;">Test Interface 1</div>
                        <div style="background: #333; padding: 2px 6px; border-radius: 4px; font-size: 0.8rem;">Web</div>
                    </div>
                    <img src="/images/decorate1.jpg" alt="AI Image 1">
                    <div style="color: #888; font-size: 0.8rem;">Your task interface 2</div>
                    <div style="margin-top: 50px; font-size: 0.9rem;">Network Interface</div>
                    <div style="color: #888; font-size: 0.8rem;">Manage interface calls. All interfaces show real-time data.</div>
                </div>
            </div>

            <div class="ai-footer">
                <div class="ai-feature-card">
                    <h3>Connect Features</h3>
                    <p style="color: #888; font-size: 0.8rem;">Easily create content for the project from the database.</p>
                </div>
                <div class="ai-feature-card">
                    <h3>Integrate Files Easily</h3>
                    <p style="color: #888; font-size: 0.8rem;">Our platform simplifies config files and final mounting.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Dashboard Section -->
    <section class="dashboard">
        <div class="container">
            <h2>Exclusive Dashboard Features</h2>
            <div class="dashboard-buttons" style="margin-bottom: 30px;">
                <% if(!user) {%>
                    <a href="/login" class="btn btn-primary">Login</a>
                <% } %>
            </div>
            <div class="dashboard-grid">
                <div class="dashboard-card">
                    <div class="dashboard-icon"><img src="/images/logo1.jpg"></div>
                    <h3>Total Submitted</h3>
                    <p>Keep track of your latest projects.</p>
                </div>
                <div class="dashboard-card">
                    <div class="dashboard-icon"><img src="/images/logo2.jpg"></div>
                    <h3>Saved Projects</h3>
                    <p>Your storage of your colleagues that interest you.</p>
                </div>
                <div class="dashboard-card">
                    <div class="dashboard-icon"><img src="/images/logo3.jpg"></div>
                    <h3>Achievements</h3>
                    <p>Stay track of your metrics and your best works.</p>
                </div>
                <div class="dashboard-card">
                    <div class="dashboard-icon"><img src="/images/logo4.jpg"></div>
                    <h3>Gather Feedback</h3>
                    <p>Gather and manage feedback on your projects.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Organization Section -->
    <section class="organization">
        <div class="container">
            <h2>A platform to benefit the entire organization</h2>
            <div class="contributors-nav">
                <button class="active">Top Contributors</button>
                <button>Average Contributors</button>
                <button>Low Contributors</button>
            </div>
            <div class="contributors-grid">
                <div class="contributor-card">
                    <div style="margin-bottom: 10px;">✓</div>
                    <div style="color: #888; font-size: 0.8rem;">
                        xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx<br>
                        xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
                    </div>
                </div>
                <div class="contributor-card">
                    <div style="margin-bottom: 10px;">✓</div>
                    <div style="color: #888; font-size: 0.8rem;">
                        xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx<br>
                        xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
                    </div>
                </div>
                <div class="contributor-card">
                    <div style="margin-bottom: 10px;">✓</div>
                    <div style="color: #888; font-size: 0.8rem;">
                        xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx<br>
                        xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Community Section -->
    <section class="community">
        <div class="container">
            <h2>Join our Community</h2>
            <div style="margin-top: 20px;">
                <a href="#" class="btn btn-outline">Sign Up</a>
            </div>
            <div class="community-images">
                <!-- Images here -->
                <img src="/images/computer.jpg" alt="Community Image 1">
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer>
        <div class="container footer-container">
            <div class="social-links">
                <a href="#"><img src="/images/x.png"></a>
                <a href="#"><img src="/images/linkedin.png"></a>
                <a href="#"><img src="/images/github.png"></a>
                <a href="#"><img src="/images/logo_main.png"></a>
            </div>
            <div class="newsletter">
                <input type="email" placeholder="Enter your email">
                <button class="btn btn-primary">Subscribe</button>
            </div>
        </div>
    </footer>

    <script>
        // Simple toggle for mobile menu
        document.querySelector('.hamburger').addEventListener('click', function() {
            const nav = document.querySelector('nav ul');
            if (nav.style.display === 'flex') {
                nav.style.display = 'none';
            } else {
                nav.style.display = 'flex';
            }
        });
        // Toggle Mobile Navigation
        const hamburger = document.querySelector('.hamburger');
        const nav = document.querySelector('nav ul');
    
        hamburger.addEventListener('click', () => {
            nav.style.display = nav.style.display === 'flex' ? 'none' : 'flex';
        });
    
        // Contributors Tab Logic
        const buttons = document.querySelectorAll('.contributors-nav button');
        const contributorGrid = document.querySelector('.contributors-grid');
    
        const contributorData = {
            'Top Contributors': [
                'Alice: 24 uploads',
                'Bob: 20 uploads',
                'Carol: 18 uploads'
            ],
            'Average Contributors': [
                'Dave: 12 uploads',
                'Eve: 10 uploads',
                'Frank: 9 uploads'
            ],
            'Low Contributors': [
                'Grace: 3 uploads',
                'Heidi: 2 uploads',
                'Ivan: 1 upload'
            ]
        };
    
        buttons.forEach(button => {
            button.addEventListener('click', () => {
                // Remove active class from all
                buttons.forEach(btn => btn.classList.remove('active'));
                button.classList.add('active');
    
                // Get contributors type
                const type = button.textContent;
                const data = contributorData[type];
    
                // Update contributor cards
                contributorGrid.innerHTML = data.map(name => `
                    <div class="contributor-card">
                        <div style="margin-bottom: 10px;">✓</div>
                        <div style="color: #888; font-size: 0.8rem;">
                            ${name}<br>Engaged contributor
                        </div>
                    </div>
                `).join('');
            });
        });
    
        // Newsletter Placeholder Logic
        const newsletter = document.querySelector('.newsletter');
        if (newsletter) {
            const input = newsletter.querySelector('input');
            input.placeholder = "Enter your email";
        }
    
        // AI Card Placeholder Replacement (example)
        const aiCards = document.querySelectorAll('.ai-card');
        aiCards.forEach((card, idx) => {
            const label = card.querySelector('.ai-header div:first-child');
            label.textContent = idx % 2 === 0 ? 'AI Queue Manager' : 'Live Test Node';
        });
    </script>
    
</body>
</html>